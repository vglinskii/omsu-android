<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.day31_fragments.ControlsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/controls" />

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.day31_fragments.DescriptionFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/description" />

</LinearLayout>