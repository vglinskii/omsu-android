<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/about_button"
        style="@style/Widget.AppCompat.Button.Block.PrimaryDark"
        android:onClick="onAboutClick"
        android:text="О программе"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dialog_open"
        style="@style/Widget.AppCompat.Button.Block.PrimaryDark"
        android:layout_marginTop="10dp"
        android:onClick="onOpenDialogClick"
        android:text="Показать диалоговое окно"
        android:background="?attr/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>